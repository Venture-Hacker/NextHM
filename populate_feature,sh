#!/bin/bash

# Navigate to the Django project directory
cd /path/to/your/project

# Run the Django shell and execute the Python commands
echo "from property.models import Feature
features = [
    'Swimming Pool',
    'Gym',
    'Garden',
    'Parking',
    'Security System',
    'Wi-Fi Connectivity',
    'Power Backup',
    'Playground',
    'Lift',
    'Clubhouse',
    'Sports Facility'
]
for feature in features:
    Feature.objects.get_or_create(name=feature)
print('Features added successfully!')
" | python manage.py shell

echo "All features have been added to the database."
